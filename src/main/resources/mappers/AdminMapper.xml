<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.account.mapper.AdminMapper">
    <!-- 添加 -->
    <insert id="insert">
        insert into admin
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="username != null">username,</if>
            <if test="password != null">password,</if>
            <if test="name != null">name,</if>
            <if test="phone != null">phone,</if>
            <if test="email != null">email,</if>
            <if test="avatar != null">avatar,</if>
            <if test="role != null">role,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="username != null">#{username},</if>
            <if test="password != null">#{password},</if>
            <if test="name != null">#{name},</if>
            <if test="phone != null">#{phone},</if>
            <if test="email != null">#{email},</if>
            <if test="avatar != null">#{avatar},</if>
            <if test="role != null">#{role},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
        </trim>
    </insert>

    <!-- 修改 -->
    <update id="update">
        update admin
        <set>
            <if test="username != null and username != ''">
                username=#{username},
            </if>
            <if test="password != null and password != '' ">
                password=#{password},
            </if>
            <if test="name != null and name != '' ">
                name=#{name},
            </if>
            <if test="avatar != null and avatar != '' ">
                avatar=#{avatar},
            </if>
            <if test="phone != null and phone != '' ">
                phone=#{phone},
            </if>
            <if test="email != null and email != '' ">
                email=#{email},
            </if>
            <if test="updateTime != null ">
                update_time=#{updateTime},
            </if>
        </set>
        <where>
            <if test="id != null and id != '' ">
                id=#{id}
            </if>
        </where>
    </update>

    <!-- 根据id删除 -->
    <delete id="deleteById">
        delete from admin where id=#{id}
    </delete>

    <!-- 批量删除 -->
    <delete id="deleteBatch">
        delete from admin where id in
        <foreach collection="ids" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <!-- 根据用户名查询 -->
    <select id="selectByUsername" resultType="com.account.pojo.Admin">
        select * from admin where username = #{username}
    </select>

    <!-- 根据id查询 -->
    <select id="selectById" resultType="com.account.pojo.Admin">
        select * from admin where id=#{id}
    </select>

    <!-- 批量查询 -->
    <select id="selectBatch" resultType="com.account.pojo.Admin">
        select * from admin where id in
        <foreach collection="ids" item="id" open="(" close=")" separator="," >
            #{id}
        </foreach>
    </select>

    <!-- 查询（条件查询）-->
    <select id="selectAll" resultType="com.account.pojo.Admin">
        select * from admin
        <where>
            <if test="username != null">
                and username=#{username}
            </if>
            <if test="name != null">
                and name=#{name}
            </if>
            <if test="phone != null">
                and phone=#{phone}
            </if>
            <if test="email != null">
                and email=#{email}
            </if>
            <if test="createTime != null">
                and create_time=#{createTime}
            </if>
        </where>
    </select>
</mapper>